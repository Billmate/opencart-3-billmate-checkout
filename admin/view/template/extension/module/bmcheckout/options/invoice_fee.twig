<div class="form-group">
    <label class="col-sm-2 control-label" for="input-status">
        <span data-toggle="tooltip" title="{{ help_invoice_fee_message }}">
            {{ entry_billmate_invoice_fee }}
        </span>
    </label>
    <div class="col-sm-10">
        <input type="text"
               name="payment_billmate_checkout_invoice_fee"
               value="{{ payment_billmate_checkout_invoice_fee }}"
               id="input-invoice-fee"
               class="form-control" />
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="input-status">
        <span data-toggle="tooltip" title="{{ help_invoice_fee_tax_message }}">
            {{ entry_billmate_invoice_fee_tax }}
        </span>
    </label>
    <div class="col-sm-10">
        <select name="payment_billmate_checkout_inv_fee_tax" id="input-invoice-fee-tax" class="form-control">
            <option value="0">{{ text_none }}</option>
            {% for tax_class in tax_classes %}
                {% if tax_class.tax_class_id == payment_billmate_checkout_inv_fee_tax %}
                    <option value="{{ tax_class.tax_class_id }}" selected="selected">{{ tax_class.title }}</option>
                {% else %}
                    <option value="{{ tax_class.tax_class_id }}">{{ tax_class.title }}</option>
                {% endif %}
            {% endfor %}
        </select>
    </div>
</div>