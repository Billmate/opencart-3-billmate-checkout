{{ header }}

<div id="common-success" class="container">
    <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
    </ul>
    <div class="row">
        <div id="content" class="col-sm-12">
            {{ content_top }}
            <div class="billmate-wrapper">
                <div class="row">
                    <div class="col-sm-6 billmate-options-wrapper" >
                        <div class="panel panel-default">
                            <div class="panel-heading" style="overflow:hidden;">
                                <h4 class="panel-title pull-left">{{ text_cart }}</h4>
                                <span class="pull-right">
                                    <a href="{{ cart_url }}">{{ text_modify }}</a>
                                </span>
                            </div>
                            <div class="panel-collapse" id="collapse-checkout-option">
                                <div class="panel-body-no-padding">
                                    <div class="table-responsive">
                                        <table class="table" style="margin-bottom:0;">
                                            <thead>
                                                <tr>
                                                    <td class="text-left">{{ column_image }}</td>
                                                    <td class="text-left">{{ column_name }}</td>
                                                    <td class="text-center">{{ column_quantity }}</td>
                                                    <td class="text-right" width="110">{{ column_total }}</td>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for product in cart %}
                                                    <tr>
                                                        <td class="text-left">
                                                            {% if product.thumb %}
                                                                <a href="{{ product.href }}">
                                                                    <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-thumbnail" />
                                                                </a>
                                                            {% endif %}
                                                        </td>
                                                        <td class="text-left">
                                                            <a href="{{ product.href }}">{{ product.name }}</a>
                                                        </td>
                                                        <td class="text-center">
                                                            {{ product.quantity }}
                                                        </td>
                                                        <td class="text-right">
                                                            {{ product.total }}
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                {% for voucher in vouchers %}
                                                    <tr>
                                                        <td class="text-left"></td>
                                                        <td class="text-left">
                                                            {{ voucher.description }}
                                                        </td>
                                                        <td class="text-center">
                                                            {{ product.quantity }}
                                                        </td>
                                                        <td class="text-right">
                                                            {{ product.amount }}
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                        <table class="table" style="margin-bottom:0;">
                                            {% for total in totals %}
                                                <tr>
                                                    <td class="text-right">
                                                        <strong>{{ total.title }}:</strong>
                                                    </td>
                                                    <td class="text-right" width="110">
                                                        {{ total.text }}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% if shipping %}
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">{{ text_shipping }}</h4>
                                </div>
                                <div class="panel-collapse" id="collapse-checkout-option">
                                    <div class="panel-body">
                                        {% if shipping_methods %}
                                            <p>{{ text_shipping_method }}</p>
                                                {% for method in shipping_methods %}
                                                    <p><strong>{{ method.title }}</strong></p>
                                                    {% if not method.error %}
                                                        {% for quote in method.quote %}
                                                            <div class="radio">
                                                                <label>
                                                                    {% if quote.code == shipping_method.code or not shipping_method.code %}
                                                                        <input type="radio" name="shipping_method" value="{{ quote.code }}" data-method="{{ quote.code }}" checked="checked" />
                                                                    {% else %}
                                                                        <input type="radio" name="shipping_method" value="{{ quote.code }}" data-method="{{ quote.code }}" />
                                                                    {% endif %}
                                                                    {{ quote.title }} - {{ quote.text }}
                                                                </label>
                                                            </div>
                                                        {% endfor %}
                                                    {% else %}
                                                        <div class="alert alert-danger alert-dismissible">
                                                            {{ shipping_method.error }}
                                                        </div>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">{{ text_comment }}</h4>
                            </div>
                            <div class="panel-collapse" id="collapse-checkout-option">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <textarea name="comment" id="comment" data-order-id="{{ order.order_id }}" rows="4" class="form-control" style="resize: none;">{{ comment }}</textarea>
                                    </div>
                                    <button class="btn btn-primary" id="comment-submit" data-loading-text="{{ text_loading }}">
                                        {{ button_save }}
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 billmate-iframe-wrapper">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">{{ text_payment }}</h4>
                            </div>
                            <div class="panel-collapse" id="collapse-checkout-option">
                                <div class="panel-body">
                                    {%  if checkout.url  %}
                                        <iframe id="billmate-checkout" src="{{ checkout.url }}"
                                            sandbox="allow-same-origin allow-scripts allow-popups allow-forms allow-top-navigation"
                                            scrolling="yes">
                                        </iframe>
                                    {% else %}
                                        {{ error_checkout }}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ content_bottom }}
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $.fn.loadCheckout.init();

        $(document).on('click', 'input[name="shipping_method"]', function (event) {
            event.preventDefault();

            let shipping_method = $(this).data('method');

            $.ajax({
                url: 'index.php?route=checkout/billmate/shipping/shipping',
                type: 'post',
                dataType: 'json',
                data: {
                    shipping_method: shipping_method
                },
                beforeSend: function() {
                    $('input[name="shipping_method"]').attr('disabled', true);
                },
                complete: function() {
                    $('input[name="shipping_method"]').removeAttr('disabled');
                },
                success: function(response) {
                    location.reload();
                },
                error: function(xhr, ajaxOptions, thrownError) {
                    alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                }
            });
        });

        $(document).on('click', '#comment-submit', function (event) {
            event.preventDefault();

            let comment = $('#comment').val();
            let order_id = $('#comment').data('order-id');

            $.ajax({
                url: 'index.php?route=checkout/billmate/shipping/comment',
                type: 'post',
                dataType: 'json',
                data: {
                    comment: comment,
                    order_id: order_id
                },
                beforeSend: function() {
                    $('#comment-submit').button('loading');
                },
                complete: function() {
                    $('#comment-submit').button('reset');
                },
                success: function(response) {
                    //
                },
                error: function(xhr, ajaxOptions, thrownError) {
                    alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                }
            });
        });
    });
</script>
{{ footer }}
