<div class="bm-cart-block">
    <form id ="bm-checkout-cart-form" action="" method="post" enctype="multipart/form-data">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <td class="text-center">{{ column_image }}</td>
                    <td class="text-left">{{ column_name }}</td>
                    <td class="text-left">{{ column_model }}</td>
                    <td class="text-left">{{ column_quantity }}</td>
                    <td class="text-right">{{ column_price }}</td>
                    <td class="text-right">{{ column_total }}</td>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                <tr>
                    <td class="text-center">{% if product.thumb %} <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name  | convert_encoding('iso-8859-1', 'UTF-8') }}" title="{{ product.name | convert_encoding('iso-8859-1', 'UTF-8') }}" class="img-thumbnail" /></a> {% endif %}</td>
                    <td class="text-left"><a href="{{ product.href }}">{{ product.name  | convert_encoding('iso-8859-1', 'UTF-8') }}</a> {% if not product.stock %} <span class="text-danger">***</span> {% endif %}
                        {% if product.option %}
                            {% for option in product.option %} <br />
                                <small>{{ option.name | convert_encoding('iso-8859-1', 'UTF-8') }}: {{ option.value | convert_encoding('iso-8859-1', 'UTF-8') }}</small> {% endfor %}
                        {% endif %}
                        {% if product.reward %} <br />
                            <small>{{ product.reward }}</small> {% endif %}
                        {% if product.recurring %} <br />
                            <span class="label label-info">{{ text_recurring_item }}</span> <small>{{ product.recurring }}</small> {% endif %}</td>
                    <td class="text-left">{{ product.model | convert_encoding('iso-8859-1', 'UTF-8') }}</td>
                    <td class="text-left"><div class="input-group btn-block" style="max-width: 200px;">
                            <input type="text" name="quantity[{{ product.cart_id }}]" value="{{ product.quantity }}" size="1" class="form-control" />
                            <span class="input-group-btn">
                      <button type="submit"
                              data-toggle="tooltip"
                              title="{{ button_update | convert_encoding('iso-8859-1', 'UTF-8') }}" class="btn btn-primary">
                          <i class="fa fa-refresh"></i>
                      </button>
                      <button type="button"
                              data-toggle="tooltip"
                              title="{{ button_remove | convert_encoding('iso-8859-1', 'UTF-8') }}"
                              class="cart-item-remove btn btn-danger"
                              data-cart-item-id="{{ product.cart_id }}"
                      >
                          <i class="fa fa-times-circle"></i>
                      </button>
                      </span></div></td>
                    <td class="text-right">{{ product.price }}</td>
                    <td class="text-right">{{ product.total }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
</div>